{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/fastrue.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "${userHome}/.deno/bin/deno",
      "runtimeArgs": [
        "run",
        "--allow-read",
        "--allow-net",
        "--allow-env",
        "--watch"
      ],
      "attachSimplePort": 8090
    },
    {
      "name": "Debug Client",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:8090"
    }
  ],
  "compounds": [
    {
      "name": "Run Development",
      "configurations": [
        "Debug Server",
        "Debug Client"
      ],
      // "preLaunchTask": "${defaultBuildTask}",
      "stopAll": true
    }
  ]
}
